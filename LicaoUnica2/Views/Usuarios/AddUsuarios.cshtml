@model LicaoUnica2.Models.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Cadastrar Usuario";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="AddUsuarios"
      asp-route-returnurl="@ViewData["ReturnUrl"]"
      method="post" class="form-horizontal" role="form" name="form">
    
    <div class="alert alert-success" role="alert" hidden="@Model.statusConfir">
        Cadastrado com sucesso!
    </div>
    <div class="alert alert-danger" role="alert" hidden="@Model.statusError">
         CPF invalido ou ja existente!
    </div>
    <div class="form-group">
        <label asp-for="NomeUsuario"></label>
        <input class="form-control" id="NomeUsuario" asp-for="NomeUsuario" />
        <span asp-validation-for="NomeUsuario"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" class="form-control" id="Email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cpf"></label>
        <input id="cpf" name="cpf" class="form-control" asp-for="Cpf" />
        <span asp-validation-for="Cpf"></span>
    </div>
    <div class="form-group">
        <label asp-for="User"></label>
        <input class="form-control" id="User" asp-for="User" />
        <span asp-validation-for="User"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" class="form-control" id="Password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
<script src="http://digitalbush.com/files/jquery/maskedinput/rc3/jquery.maskedinput.js" type="text/javascript"></script>
<script>
jQuery(function($){
    $("#cpf").mask("999.999.999-99");
    });

</script>

}

